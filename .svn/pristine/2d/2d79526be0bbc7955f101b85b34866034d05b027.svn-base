body {
    margin: 10px;
    background-image:url('image/background.png');
    font-family:"Arial", Arial ,Sans-serif;
    font-size:24px;
    color: white;
    zoom: 90%
}

svg {
    /* Prevent user from highlighting SVG canvas */
    user-select: none;
    -moz-user-select: none;
    -webkit-user-select: none;
}

input[type="range"] {
    width: 200px;
    margin:auto;
}

input[type="range"]::-webkit-slider-thumb:hover {
    cursor: pointer;
 }

.display {
    padding: 10px;
    text-align: center;
}

.row {
    text-align:center;
}

.btn-circle {
  width: 30px;
  height: 30px;
  text-align: center;
  padding: 6px 0;
  font-size: 12px;
  line-height: 1.42;
  border-radius: 15px;
}